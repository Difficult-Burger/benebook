<!DOCTYPE html>
<html lang="zh">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
  <style>
    body {
      overflow-x: hidden;
    }
    
    .book-card {
      height: 100%;
      transition: transform 0.2s;
    }
    
    .book-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    }
    
    /* 页面布局 */
    .page-container {
      display: flex;
      width: 100%;
      min-height: 100vh;
    }
    
    .main-content {
      flex: 1;
      max-width: calc(100% - 320px);
      padding: 20px;
    }
    
    /* 书籍卡片样式调整 */
    .book-image {
      height: 150px;
    }
    
    /* 聊天框样式 */
    .chat-sidebar {
      width: 320px;
      position: fixed;
      right: 0;
      top: 0;
      bottom: 0;
      background-color: #fff;
      border-left: 1px solid #dee2e6;
      display: flex;
      flex-direction: column;
      z-index: 1000;
    }
    
    .chat-header {
      padding: 15px;
      background-color: #6c757d;
      color: #fff;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    
    .chat-messages {
      flex: 1;
      overflow-y: auto;
      padding: 15px;
      display: flex;
      flex-direction: column;
      gap: 10px;
    }
    
    .message {
      max-width: 80%;
      padding: 10px 15px;
      border-radius: 15px;
      word-wrap: break-word;
    }
    
    .user-message {
      align-self: flex-end;
      background-color: #007bff;
      color: white;
      border-bottom-right-radius: 5px;
    }
    
    .assistant-message {
      align-self: flex-start;
      background-color: #e9ecef;
      color: #212529;
      border-bottom-left-radius: 5px;
    }
    
    .chat-input {
      padding: 15px;
      border-top: 1px solid #dee2e6;
      display: flex;
    }
    
    .chat-input input {
      flex: 1;
      padding: 10px;
      border: 1px solid #ced4da;
      border-radius: 20px;
      margin-right: 10px;
    }
    
    .chat-input button {
      border: none;
      background-color: #007bff;
      color: white;
      border-radius: 20px;
      padding: 5px 15px;
    }
    
    .chat-input button:hover {
      background-color: #0069d9;
    }
    
    /* 响应式调整 */
    @media (max-width: 992px) {
      .page-container {
        flex-direction: column;
      }
      
      .main-content {
        max-width: 100%;
        order: 1;
      }
      
      .chat-sidebar {
        position: relative;
        width: 100%;
        order: 2;
        height: 400px;
        border-left: none;
        border-top: 1px solid #dee2e6;
      }
    }
  </style>
</head>
<body>
  <div class="page-container">
    <!-- 主内容区域 -->
    <div class="main-content">
      <header class="pb-3 mb-4 border-bottom">
        <div class="d-flex justify-content-between align-items-center">
          <h1 class="display-5 fw-bold">Benebook 书籍列表</h1>
          <div>
            <a href="/donors" class="btn btn-outline-success me-2">捐赠者</a>
            <a href="/donations" class="btn btn-outline-primary">捐赠记录</a>
            <a href="/rewards" class="btn btn-outline-danger me-2">积分商城</a>
          </div>
        </div>
      </header>

      <div class="row g-4">
        <% if (books && books.length > 0) { %>
          <% books.forEach(book => { %>
            <div class="col-lg-4 col-md-6 mb-4">
              <div class="card book-card">
                <div class="bg-light text-center p-3 book-image" style="display: flex; align-items: center; justify-content: center;">
                  <% if (book.image_url) { %>
                    <img src="<%= book.image_url %>" alt="<%= book.title %>" style="max-height: 140px; max-width: 100%;">
                  <% } else { %>
                    <span class="text-muted">暂无图片</span>
                  <% } %>
                </div>
                <div class="card-body">
                  <h5 class="card-title"><%= book.title %></h5>
                  <p class="card-text mb-1"><%= book.author || '未知作者' %></p>
                  <p class="card-text text-muted small mb-2">分类: <%= book.category || '未分类' %></p>
                  <div class="d-flex justify-content-between align-items-center mt-3">
                    <span class="fw-bold">¥<%= book.original_price %></span>
                    <a href="/book/<%= book.book_id %>" class="btn btn-sm btn-primary">查看详情</a>
                  </div>
                </div>
              </div>
            </div>
          <% }) %>
        <% } else { %>
          <div class="col-12 text-center py-5">
            <p class="text-muted">暂无书籍数据</p>
          </div>
        <% } %>
      </div>
    </div>
    
    <!-- 聊天侧边栏 -->
    <div class="chat-sidebar" id="chatSidebar">
      <div class="chat-header">
        <span>智能助手</span>
      </div>
      <div class="chat-messages" id="chatMessages"></div>
      <div class="chat-input">
        <input 
          type="text" 
          id="messageInput" 
          placeholder="请输入您的问题..." 
          autocomplete="off"
        >
        <button id="sendButton">发送</button>
      </div>
    </div>
  </div>
  
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const chatMessages = document.getElementById('chatMessages');
      const messageInput = document.getElementById('messageInput');
      const sendButton = document.getElementById('sendButton');
      
      // 发送消息函数
      function sendMessage() {
        const message = messageInput.value.trim();
        if (!message) return;
        
        // 禁用发送按钮和输入框
        sendButton.disabled = true;
        sendButton.innerText = '发送中...';
        messageInput.disabled = true;
        
        // 添加用户消息到聊天框
        addMessage(message, 'user');
        messageInput.value = '';
        
        // 显示加载状态
        const loadingId = showLoading();
        
        // 发送到后端
        fetch('/api/chat/message', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({ message })
        })
        .then(response => response.json())
        .then(data => {
          // 移除加载状态
          removeLoading(loadingId);
          
          // 添加AI回复到聊天框
          addMessage(data.response, 'assistant');
          
          // 自动滚动到底部
          scrollToBottom();
          
          // 重新启用发送按钮和输入框
          sendButton.disabled = false;
          sendButton.innerText = '发送';
          messageInput.disabled = false;
          messageInput.focus();
        })
        .catch(error => {
          // 移除加载状态
          removeLoading(loadingId);
          
          // 显示错误信息
          addMessage('抱歉，发生了错误，请稍后再试。', 'assistant');
          console.error('发送消息出错:', error);
          
          // 重新启用发送按钮和输入框
          sendButton.disabled = false;
          sendButton.innerText = '发送';
          messageInput.disabled = false;
          messageInput.focus();
        });
      }
      
      // 添加消息到聊天框
      function addMessage(text, role) {
        const messageElement = document.createElement('div');
        messageElement.classList.add('message');
        messageElement.classList.add(role === 'user' ? 'user-message' : 'assistant-message');
        
        // 处理文本中的换行符
        const formattedText = text.replace(/\n/g, '<br>');
        messageElement.innerHTML = formattedText;
        
        chatMessages.appendChild(messageElement);
        scrollToBottom();
      }
      
      // 显示加载状态
      function showLoading() {
        const loadingId = Date.now().toString();
        const loadingElement = document.createElement('div');
        loadingElement.classList.add('message', 'assistant-message');
        loadingElement.id = `loading-${loadingId}`;
        loadingElement.innerHTML = '正在思考...';
        chatMessages.appendChild(loadingElement);
        scrollToBottom();
        return loadingId;
      }
      
      // 移除加载状态
      function removeLoading(loadingId) {
        const loadingElement = document.getElementById(`loading-${loadingId}`);
        if (loadingElement) {
          loadingElement.remove();
        }
      }
      
      // 滚动到聊天框底部
      function scrollToBottom() {
        chatMessages.scrollTop = chatMessages.scrollHeight;
      }
      
      // 监听发送按钮点击事件
      sendButton.addEventListener('click', sendMessage);
      
      // 监听输入框回车事件
      messageInput.addEventListener('keypress', function(e) {
        if (e.key === 'Enter') {
          sendMessage();
        }
      });
      
      // 添加欢迎消息
      addMessage('您好！我是Benebook的智能助手，有什么可以帮助您的?', 'assistant');
    });
  </script>
</body>
</html>